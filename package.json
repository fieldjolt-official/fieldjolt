{
  "name": "fieldjolt",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "biome check --write .",
    "format": "biome format --write",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:app": "turbo -F app dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @fieldjolt/db db:push",
    "db:studio": "turbo -F @fieldjolt/db db:studio",
    "db:generate": "turbo -F @fieldjolt/db db:generate",
    "db:migrate": "turbo -F @fieldjolt/db db:migrate",
    "setup-dev": "tsx scripts/setup-dev.ts",
    "check-setup": "tsx scripts/check-setup.ts",
    "new-branch": "tsx scripts/new-branch.ts",
    "reset-db": "tsx scripts/reset-db.ts",
    "seed-db": "tsx scripts/seed.ts"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@types/node": "^22.18.12",
    "tsdown": "^0.15.9",
    "tsx": "^4.20.6",
    "turbo": "^2.5.8",
    "ultracite": "5.6.4"
  },
  "packageManager": "pnpm@10.19.0"
}
