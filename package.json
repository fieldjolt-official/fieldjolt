{
  "name": "fieldjolt-new",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @fieldjolt-new/db db:push",
    "db:studio": "turbo -F @fieldjolt-new/db db:studio",
    "db:generate": "turbo -F @fieldjolt-new/db db:generate",
    "db:migrate": "turbo -F @fieldjolt-new/db db:migrate"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "2.2.6",
    "ultracite": "5.6.4",
    "tsdown": "^0.15.5",
    "@types/node": "^22.13.11"
  },
  "packageManager": "pnpm@10.12.1"
