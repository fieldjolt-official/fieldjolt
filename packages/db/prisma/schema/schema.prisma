generator client {
  provider     = "prisma-client-js"
  engineType   = "client"
  moduleFormat = "esm"
  // NO output parameter = generates to default node_modules/.prisma/client
  // NO runtime parameter = works on BOTH platforms with driver adapters
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
