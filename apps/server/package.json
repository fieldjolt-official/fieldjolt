{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "wrangler deploy --dry-run --outdir dist",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "wrangler dev --port=3000",
    "start": "wrangler dev",
    "deploy": "wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings"
  },
  "dependencies": {
    "@fieldjolt/db": "workspace:*",
    "@prisma/adapter-pg": "^6.18.0",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "hono": "^4.10.3",
    "pg": "^8.16.3",
    "resend": "^6.3.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/node": "^22.18.12",
    "@types/pg": "^8.15.5",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "wrangler": "^4.45.0"
  }
}
